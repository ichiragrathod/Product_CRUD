<h1>All Product List</h1>
<br>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Stock</th>
            <th>Price</th>
            <th colspan="4">Action</th>
        </tr>
    </thead>

    <tbody>
    <% @products.each do |product| %>
        <tr>
            <td><%= product.name%></td>
            <td><%= product.description%></td>
            <td><%= product.stock%></td> 
            <td><%= product.price%></td> 
            <td><%= link_to 'Show', product_path(product.id)%></td>
            <td><%= link_to 'Edit', edit_product_path(product.id)%></td>
           <td><%= link_to 'Delete', product_delete_path(product.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
    <%  end %>   
    </tbody>
</table>

<p>
<%= link_to 'Add New Product', new_product_path %>
</p>