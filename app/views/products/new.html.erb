<h1>Add new Product</h1>

<% if @product.errors.any? %>
    <h2>The following errors prevented the Product from being saved </h2>
    
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
    <% end %>
    </ul>
<% end %>


<%= form_with scope: :product, url: products_path, local: true ,data: { turbo: false } do |f| %>

<p>
    <%= f.label :name%>
    <br>
    <%= f.text_field :name%>
</p>

<p>
    <%= f.label :description%>
    <br>
    <%= f.text_area :description%>
</p>

<p>
    <%= f.label :stock%>
    <br>
    <%= f.text_field :stock%>
</p>

<p>
    <%= f.label :price%>
    <br>
    <%= f.text_field :price%>
</p>

<p>
    <%= f.submit%>
</p>


<% end %>

<%= link_to 'Return to Profucts listing', products_path%>